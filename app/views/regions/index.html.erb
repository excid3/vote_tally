


<div class="row">
  <div class="col-sm-6">
    <h1>Regions</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_region_path, class: 'btn btn-primary' do %>
    Add New Region
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            
      </tr>
    </thead>

    <tbody>
      <% @regions.each do |region| %>
        <%= content_tag :tr, id: dom_id(region), class: dom_class(region) do %>
          
            <td><%= link_to region.name, region %></td>
          

          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
